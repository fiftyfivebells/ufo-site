
{{define "base"}}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{template "title" .}} - Eyes on the Skies</title>
  </head>
  <body>
    <header>
      <h1><a href="/">Eyes on the Skies</a></h1>
    </header>
    <nav>
      <div>
        <a href="/">Home</a>
        {{if .IsAuthenticated}}
          <a href="/report">Report a Sighting</a>
        {{end}}
      </div>
      <div>
        {{if .IsAuthenticated}}
          <form action="/user/logout" method="POST">
            <button>Logout</button>
          </form>
        {{else}}
          <a href="/user/register">Register</a>
          <a href="/user/login">Login</a>
        {{end}}
      </div>
    </nav>
    <main>
      {{with .Flash}}
      <div>{{.}}</div>
      {{end}}
      {{template "main" .}}
    </main>
    {{template "footer" .}}
  </body>
</html>
{{end}}
