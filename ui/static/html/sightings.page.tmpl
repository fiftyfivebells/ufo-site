{{template "base" .}}

{{define "title"}}Sightings{{end}}

{{define "main"}}
<h2>Sightings by State</h2>
{{if .Sightings}}
<table>
  <tr>
    <th>Index</th>
    <th>Date</th>
    <th>City</th>
    <th>State</th>
    <th>Shape</th>
    <th>Duration (seconds)</th>
  </tr>
  {{range .Sightings}}
  <tr>
    <td><a href="/sighting/{{.Index}}">{{.Index}}</a></td>
    <td>{{.Datetime.Format "10/12/2006"}}</td>
    <td>{{.City}}</td>
    <td>{{.State}}</td>
    <td>{{.Shape}}</td>
    <td>{{.Duration}}</td>
  </tr>
  {{end}}
</table>
{{else}}
<p>Nothing to see yet</p>
{{end}}
{{end}}
